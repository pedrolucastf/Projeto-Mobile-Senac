<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProjeto.MenuMaster"
                Title="Menu Master">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <TableView>
                    <TableSection>
                        <ViewCell>
                            <Label Text="COMPRA CERTA" HorizontalTextAlignment="Center"
                                   Margin="0,15,0,0"/>
                        </ViewCell>

                        <ViewCell Tapped="ViewCell_Tapped">
                            <Label Text="Histórico" x:Name="Historico" Margin="15,10,0,0"/>
                        </ViewCell>

                    </TableSection>
                </TableView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

</MasterDetailPage>