<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProjeto.MenuMaster"
                Title="Menu Master">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <TableView>
                    <TableSection>
                        <ViewCell>
                            <Label Text="COMPRA CERTA" HorizontalTextAlignment="Center"/>
                        </ViewCell>

                        <ViewCell Tapped="ViewCell_Tapped">
                            <Label Text="Computador" x:Name="Computador" Margin="10"/>
                        </ViewCell>

                        <ViewCell Tapped="ViewCell_Tapped_1">
                            <Label Text="Notebook" x:Name="Notebook" Margin="10"/>
                        </ViewCell>

                        <ViewCell Tapped="ViewCell_Tapped_2">
                            <Label Text="TV" x:Name="TV" Margin="10"/>
                        </ViewCell>

                    </TableSection>
                </TableView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

</MasterDetailPage>