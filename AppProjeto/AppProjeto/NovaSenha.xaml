<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProjeto.NovaSenha">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="ic_launcher.png"/>

            <Label Text="NOVA SENHA"
        HorizontalTextAlignment="Center"/>

            <Entry Placeholder="DIGITE SUA NOVA SENHA"
        HorizontalTextAlignment="Center" Margin="30,150,30,10"/>
           
            <Entry Placeholder="DIGITE NOVAMENTE SUA SENHA"
        HorizontalTextAlignment="Center" Margin="30,10,30,10"/>

            <StackLayout Orientation="Horizontal">
                <Button Text ="SALVAR SENHA"
                x:Name="buttonSalvarSenha"
                Clicked="ButtonSalvarSenha_Clicked"
                HorizontalOptions="FillAndExpand"/>

                <Button Text ="CANCELAR"
            x:Name="buttonCancelar"
                Clicked="ButtonCancelar_Clicked"
                HorizontalOptions="FillAndExpand" />
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>