<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProjeto.CadastroUsuarios">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="ic_launcher.png"/>

            <Label Text="CADASTRO DE USUÁRIOS"
        HorizontalTextAlignment="Center"/>

            <Entry Placeholder="NOME COMPLETO" x:Name="entryNome"
        HorizontalTextAlignment="Center" Margin="30,25,30,30"/>

            <Entry Placeholder="DIGITE SEU USUÁRIO" x:Name="entryUsuario"
        HorizontalTextAlignment="Center" Margin="30,25,30,30"/>

            <Entry Placeholder="DIGITE SUA SENHA" x:Name="entrySenha1"
        HorizontalTextAlignment="Center" Margin="30,25,30,30"
                   IsPassword="True"/>

            <Entry Placeholder="DIGITE NOVAMENTE SUA SENHA" x:Name="entrySenha2"
        HorizontalTextAlignment="Center" Margin="30,25,30,30"
                   IsPassword="True"/>

            <StackLayout Orientation="Horizontal">
                <Button Text ="CADASTRAR"
            x:Name="buttonCadastrar"
                Clicked="ButtonCadastrar_Clicked"
                HorizontalOptions="FillAndExpand"/>

            </StackLayout>




        </StackLayout>
    </ContentPage.Content>
</ContentPage>